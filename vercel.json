{
  "version": 2,
  "builds": [
    {
      "src": "nextjs-app/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "handler.py",
      "use": "@vercel/python",
      "config": {
        "pythonVersion": "3.11"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "handler.py"
    },
    {
      "src": "/(.*)",
      "dest": "nextjs-app/$1"
    }
  ],
  "env": {
    "NEXT_PUBLIC_API_URL": "/api"
  }
}


